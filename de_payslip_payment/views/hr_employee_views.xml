<odoo>
  <record id="view_employee_form_inherit" model="ir.ui.view">
		<field name="name">view.employee.form.inherit</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_form" />
		<field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']/group[1]" position="inside">
                <group name="payslip_method" string="Salary Payment">
                    <field name="payslip_payment_method" widget="radio"/>
                </group>
            </xpath>
		</field>
	</record>
</odoo>