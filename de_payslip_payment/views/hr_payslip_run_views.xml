<odoo>
  <record id="hr_payslip_run_form_inherit" model="ir.ui.view">
		<field name="name">hr.payslip.run.form.inherit</field>
		<field name="model">hr.payslip.run</field>
		<field name="inherit_id" ref="hr_payroll.hr_payslip_run_form" />
		<field name="arch" type="xml">
            <xpath expr="//header//button[@name='draft_payslip_run']" position="after">
                <button string="Generate Payment Batch" name="generate_payment_batch" type="object" class="oe_highlight" attrs="{'invisible': [('credit_note', '=', True)]}"/>

            </xpath>
            <xpath expr="//field[@name='credit_note']" position="after">
                <field name="journal_id" attrs="{'invisible': [('credit_note', '=', True)]}"/>
                <field name="payment_method_id" attrs="{'invisible': [('journal_id', '=', False)], 'required': [('journal_id','!=',False)]}"/>
                <field name="paid" />
            </xpath>
		</field>
	</record>
</odoo>