<odoo>
  <data>
      <record model="ir.ui.view" id="de_product_template_only_form_view_inherit">
        <field name="name">de.product.template.only.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="ref_product_tmpl_id" group="base.group_system"/>
            </xpath>
        </field>
    </record>
      
      <record model="ir.ui.view" id="product_product_normal_form_view_inherit">
        <field name="name">de.product.product.normal.form.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="ref_product_id"/>
            </xpath>
        </field>
    </record>
      
  </data>
</odoo>