<odoo>
  <data>
      <record model="ir.ui.view" id="inherit_employee_fields_form_view">
          <field name="name">inherit.employee.fields.form.view</field>
          <field name="model">hr.employee</field>
          <field name="type">form</field>
          <field name="inherit_id" ref="hr.view_employee_form" />
          <field name="arch" type="xml">
              <xpath expr="//field[@name='address_home_id']" position="before">
                  <field name="father_name"/>
              </xpath>
              <xpath expr="//field[@name='address_home_id']" position="attributes">
                  <attribute name="string">Present Address</attribute>
              </xpath>
              <xpath expr="//field[@name='address_home_id']" position="after">
                  <field name="permanent_address"/>
                  <field name="qualification"/>
                  <field name="number_of_department"/>
              </xpath>
              <xpath expr="//form[1]/sheet[1]/div[not(@name)][1]/div[1]/notebook[1]" position="inside">
                  <page string="Emergency Contact">
                      <field name="emergency_contact_lines" widget="one2many_list">
                          <tree string="Emergency Contact Lines" editable="bottom">
                              <field name="name"/>
                              <field name="relation"/>
                              <field name="mobile_number"/>
                              <field name="address"/>
                          </tree>
                      </field>
                  </page>
              </xpath>
          </field>

    </record>
