<odoo>
  <data>
    <record model="ir.ui.view" id="hr_disciplinary_case_tree">
      <field name="name">hr.disciplinary.case.tree</field>
      <field name="model">hr.disciplinary.case</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name_seq"/>
            <field name="title"/>
          <field name="employee_name"/>
          <field name="description_field"/>

<!--          <field name="pateint_name"/>-->
<!--          <field name="patient_age"/>-->
        </tree>
      </field>
    </record>

     <record model="ir.ui.view" id="hr_disciplinary_action_tree">
      <field name="name">hr.disciplinary.action.tree</field>
      <field name="model">hr.disciplinary.action</field>
      <field name="arch" type="xml">
        <tree>
          <field name="desciplinart_case"/>
          <field name="action_type"/>
          <field name="action_created_by"/>
          <field name="owner"/>
          <field name="due_date" optional="hide"/>
          <field name="status" optional="hide"/>


        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="hr_disciplinary_case_form">
      <field name="name">hr.disciplinary.case.form</field>
      <field name="model">hr.disciplinary.case</field>
<!--      <field name="view_mode">form</field>-->
      <field name="arch" type="xml">
        <form>

            <sheet>
                <div  style="background-color:green;height=40px">
                    <p style="color:white;"><h1>Add Disciplinary Case</h1></p>
                </div>
                 <div>
                    <h1>
                         <field name="name_seq"/>
                    </h1>
                </div>
                <group>
                    <group>
                          <field name="title"/>
                          <field name="employee_name"/>
                    </group>
                    <group>
                          <field name="description_field"/>
                    </group>
                </group>
            </sheet>
        </form>
      </field>
    </record>
       <record model="ir.ui.view" id="hr_disciplinary_action_form">
      <field name="name">hr.disciplinary.action.form</field>
      <field name="model">hr.disciplinary.action</field>
<!--      <field name="view_mode">form</field>-->
      <field name="arch" type="xml">
        <form>

            <sheet>

                <group>
                    <group>
                         <field name="desciplinart_case"/>
                         <field name="owner"/>
                    </group>
                    <group>
                         <field name="action_type"/>
                         <field name="due_date"/>
                    </group>
                     <group>
                       <field name="action_created_by"/>
                       <field name="status"/>
                    </group>
                </group>
                <group>
                    <field name="description_page"/>
                </group>
                <div style="text-align:right;">
                    <button name="test" string="CANCEL" style="background-color:orange;color:white;"/>
                    <button name="test" string="VIEW DISCIPLINARY CASE" style="background-color:orange;color:white;"/>
                    <button name="test" string="SAVE" style="background-color:green;color:white;"/>
                </div>
            </sheet>
        </form>
      </field>
    </record>


