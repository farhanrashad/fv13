<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="po_matrix_report_templet">
        <t t-call="web.external_layout">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as='o'>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th></th>
                            <t t-foreach='model_list' t-as="model">
                                <th> <span t-esc="model"/></th>   
                            </t>
                                </tr>
                        </thead>
                        <tbody>
                            <t t-foreach='color_list' t-as="color">
                                <t t-set="total_qty" t-value="0"/>
                                <tr>
                                    <td>
                                        <span t-esc="color"/>
                                    </td>
                                    <t t-foreach='model_list' t-as="model">
                                        <t t-foreach="product_qty(color, model)" t-as="pd"> 
                                            <t t-set="total_qty" t-value="total_qty + pd.product_qty" />  
                                            <td>
                                                <span t-esc="pd.product_qty"/>
                                            </td>
                                        </t>
                                    </t>
                                    <td>
                                        <span t-esc="total_qty"/>           
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black o_total">
                                <td>
<!--                                     <span t-esc="sum([rec.product_qty for rec in o.order_line])"/> -->
                                </td>
                                <td>
                                    <span t-esc="sum([rec.product_qty for rec in o.order_line])"/>
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>
                    <p style="page-break-before:always;"> </p>
                </t>
            </t>
        </t>
    </template>

</odoo>