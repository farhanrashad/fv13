<odoo>
    <record id="purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="job_order_id" />
                <field name="sale_id" />
            </field>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_delivery" class="oe_stat_button" icon="fa-truck" string="Delivery">
<!--                             <field name="invoice_count" widget="statinfo" string="Vendor Bills"/>
                            <field name="invoice_ids" invisible="1"/> -->
                        </button>
            </xpath>
            <xpath expr="//field[@name='qty_received']" position="after">
                
                <field name="qty_issued100" optional="hide" />
                <field name="weight_issued100" optional="hide" />
                <field name="qty_issued" optional="show" />
                <field name="weight_issued" optional="show" />
                
                <field name="qty_consume" optional="show" />
                <field name="weight_consume" optional="show" />
                <field name="qty_consume100" optional="hide" />
                <field name="weight_consume100" optional="hide" />
            </xpath>
            
        </field>
    </record>
    
	<record id="purchase_order_tree_inherit" model="ir.ui.view">
        <field name="name">purchase.purchase.order.tree.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="job_order_id" />
                <field name="sale_id" />
            </field>
        </field>
    </record>
</odoo>