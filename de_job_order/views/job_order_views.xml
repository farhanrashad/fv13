<odoo>
    
    <!-- Job Sheet Form View -->
    <record id="job_order_sheet_form_view" model="ir.ui.view">
        <field name="name">job.order.sheet.form.view</field>
        <field name="model">job.order</field>
        <field name="arch" type="xml">
            <form string="Job Order">
                <header>
                    <button name="action_cancel" states="draft,confirmed,processed" string="Cancel" type="object"/>
                    <button name="action_draft" states="cancel" string="Set to Draft" type="object"/>
                    
                    <button string="Confirm" name="action_confirm" type="object" states="draft" class="oe_highlight"/>
                    <button string="Process Job" name="action_process" type="object" states="confirmed" class="oe_highlight"/>
                    <button string="Approve" name="action_approve" type="object" states="processed" class="oe_highlight"/>
                    
                    <button string="Update SO in Product/BOM" name="action_update_so_in_product" type="object" class="oe_highlight"/>
					
                    <!--<button string="Generate Orders" name="generate_orders" type="object" states="draft,confirmed,planned" class="oe_highlight"/>-->
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,computed,processed,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_productions" icon="fa-wrench" type="object" attrs="{'invisible': [('production_count', '=', 0)]}">
                            <field name="production_count" string="Production" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" name="action_view_purchases" icon="fa-credit-card" type="object" attrs="{'invisible': [('purchase_count', '=', 0)]}">
                            <field name="purchase_count" string="Subcontract" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" readonly="1" force_save="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_order"/>
                        </group>
                        <group>
                            <field name="sale_id"/>
                            <field name="struct_id"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}" force_save="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="job_order_sale_lines" widget="one2many_list">
                                <tree string="Order lines" editable="bottom">
                                    <field name="sale_line_id"/>
                                    <field name="product_tmpl_id" context="{'default_type': 'product'}"/>
                                    <field name="product_id" groups="product.group_product_variant" context="{'default_type': 'product'}"/>
                                    <field name="product_uom"/>
                                    <field name="product_uom_qty"/>
                                    <field name="bom_id"/>
                                    <field name="struct_id"/>

                                </tree>
                            </field>
                        </page>
                        
                        <page string="Job Items">
                            <field name="job_order_lines" widget="one2many_list">
                                <tree string="Job Order Rule lines" editable="bottom">
                                    <field name="job_sale_line_id"/>
                                    <field name="product_tmpl_id"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="sequence"/>
                                    <field name="category_id"/>
                                    <field name="job_rule_id"/>
                                    <field name="line_desc"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Material Production">
                            <field name="job_order_mrp_ids" >
                                <tree string="Job Order BOM lines" editable="bottom">
                                    <field name="bom_id"/>
                                    <field name="bom_type"/>
                                    <field name="quantity"/>
                                    <field name="production_quantity"/>
                                    <!--
                                    <button name="generate_mo" type="object" string="Generate MO" colspan="2" icon="fa-cogs"/> -
-->
                                </tree>
                            </field>
                        </page>
                        <!--
                        <page string="Routings">
                            <field name="job_order_routing_ids" >
                                <tree string="Job Order Routings" editable="bottom">
                                    <field name="routing_id"/>
                                    <field name="sequence"/>
                                    <field name="is_subcontracting"/>
                                    <field name="apply_on_variant"/>
                                    <field name="routing_include"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Details by Component">
                        </page>
                        <page string="Details By Category">
                            <field name="details_by_category" context="{'group_by':'category_id'}" domain="[('appears_on_sheet', '=', True)]">
                                <tree string="Category Lines" decoration-info="quantity == 0">
                                    <field name="category_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
-->
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Job Order Tree View -->
    <record id="job_order_sheet_tree_view" model="ir.ui.view">
        <field name="name">job.order.sheet.tree.view</field>
        <field name="model">job.order</field>
        <field name="arch" type="xml">
            <tree string="Job Order">
                <field name="name"/>
                <field name="date_order"/>
                <field name="sale_id"/>
                <field name="struct_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <!-- Job Order Sheet Action View -->
    <record id="action_job_order" model="ir.actions.act_window">
        <field name="name">Job Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">job.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click here to create a new Job Order
          </p>
        </field>
    </record>
    
    <menuitem id="job_order_sheet_menu" name="Job Order" parent="mrp.menu_mrp_manufacturing" action="action_job_order" sequence="0"/>
</odoo>