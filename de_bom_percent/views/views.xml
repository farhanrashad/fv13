<odoo>
    <record id="mrp_bom_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.bom.form.view.inherit</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="compute_qty"/>
            </field>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='bom_line_ids']/tree[1]/field[@name='product_qty']" position="after">
                <field name="percent_qty" attrs="{'invisible':[('parent.compute_qty', '!=', 'percentage')],'required':[('parent.compute_qty', '=', 'percentage')]}" />
                
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='bom_line_ids']/tree[1]/field[@name='product_qty']" position="attributes">
                <attribute name="attrs">{"readonly": [["parent.compute_qty","=","percentage"]]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>