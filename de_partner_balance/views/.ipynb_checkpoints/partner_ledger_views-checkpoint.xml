<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="partner_balance_wizard_report" model="ir.ui.view">
        <field name="name">partner.balance.wizard.report</field>
        <field name="model">partner.balance</field>
        <field name="arch" type="xml">
            <form string="Partner Balance">
                <group col="4">            
                        <field name="start_date"/>
                        <field name="end_date"/>                 
                        <field name="partner_type"/>
                        <field name="is_posted"/>
                        <field name="is_vendor_balance"/>
                        <field name="category_id"/>               
                </group>

                <footer>
                    <button name="print_report" type="object" string="Print" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_partner_balance_wizard" model="ir.actions.act_window">
        <field name="name">Partner Balance</field>
        <field name="res_model">partner.balance</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_partner_balance_report" name="Partner Balance" parent="account.account_reports_management_menu" action="action_partner_balance_wizard" sequence="150" />
</odoo>