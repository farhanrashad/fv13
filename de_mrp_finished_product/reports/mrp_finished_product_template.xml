<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_mrp_finished_product_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="row justify-content-end">
                            <div class="col-12">
                                <table class="table table-bordered" style="table-layout: fixed">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Lot/Serial Number</th>
                                            <th>Unit of Measure</th>
                                            <th>Produced</th>
                                            <th>Weight/kg</th>
                                            <th>Total Weight</th>
                                        </tr>
                                    </thead>
                                     <t t-set="qty" t-value="0"/>
                                     <t t-set="weight" t-value="0"/>
                                     <t t-set="totweight" t-value="0"/>
                                    <tbody>
                                      <t t-foreach="o.finished_move_line_ids" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.lot_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_uom_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.qty_done"/>
                                            </td>
                                            <t t-set="qty" t-value="qty + line.qty_done"/>
                                            <td>
                                                <span t-field="line.weight"/>
                                            </td>
                                            <t t-set="weight" t-value="weight + line.weight"/>
                                            <td>
                                                <span t-field="line.total_weight"/>
                                            </td>
                                            <t t-set="totweight" t-value="totweight + line.total_weight"/>
                                        </tr>
                                      </t>
                                        <tr>
                                            <td>
<!--                                                <span t-field="line.product_id"/>-->
                                            </td>
                                            <td>
<!--                                                <span t-field="line.lot_id"/>-->
                                            </td>
                                            <td>
<!--                                                <span t-field="line.lot_id"/>-->
                                            </td>
                                            <td>
                                                <span t-esc="qty"/>
                                            </td>
                                            <td>
                                                <span t-esc="weight"/>
                                            </td>
                                            <td>
                                                <span t-esc="totweight"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
<!--                                <p style="margin: 0px; padding: 0px; font-weight: bold;">-->
<!--&lt;!&ndash;                                    <span t-field="o.note"/>&ndash;&gt;-->
<!--                                </p>-->
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="mrp_finished_product_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="de_mrp_finished_product.report_mrp_finished_product_template"/>
            </t>
        </t>
    </template>
</odoo>