<odoo>
  <record model="ir.ui.view" id="sale_tags_form_view">
            <field name="name">Tags</field>
            <field name="model">sale.order.tags</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_tags_tree_view">
            <field name="name">Tags</field>
            <field name="model">sale.order.tags</field>
            <field name="arch" type="xml">
                <tree string="Tags" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sale_tags_action" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="res_model">sale.order.tags</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new tag
              </p>
            </field>
        </record>
        <menuitem action="sale_tags_action" id="menu_sale_tags_act" parent="sale.menu_sales_config"/>
</odoo>