<odoo>
	<record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">view.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <field name="client_order_ref" position="after">
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
            </field>
        </field>
    </record>
    
    <record id="sale_view_quotation_tree_inherit" model="ir.ui.view">
        <field name="name">sale.view.quotation.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='state']" position="after">
               <field name="tag_ids" string="Order Status" widget="many2many_tags" optional="show" options="{'color_field': 'color', 'no_create_edit': True}"/>
            </xpath>
        </field>
    </record>
    
    <record id="sale_view_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.view.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="tag_ids" string="Order Status" widget="many2many_tags" optional="show" options="{'color_field': 'color', 'no_create_edit': True}"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_inherit_sale_order_filter" model="ir.ui.view">
            <field name="name">view.inherit.sale.order.search</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="arch" type="xml">
            	<xpath expr="//filter[@name='my_quotation']" position="after">
            		<separator/>
                    <filter name="tag_inprocess" string="In Process" domain="[('tag_ids.name','=','In-Process')]"/>
                    <filter name="tag_shipped" string="Shipped" domain="[('tag_ids.name','=','Shipped')]"/>
                    <filter name="tag_pending" string="Pending" domain="[('tag_ids.name','=','Pending')]"/>
            	</xpath>
            </field>
        </record>

    
    
</odoo>