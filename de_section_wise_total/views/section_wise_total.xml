<odoo>
  	<record id="sale_order_inherit_form_views" model="ir.ui.view">
		<field name="name">sale.order.inherit.form.view</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='name']" position="after">
				<group>
					<field name='section_sum' invisible="1"/>
				</group>
			</xpath>

		</field>
	</record>
    
      <record id="purchase_order_form_views" model="ir.ui.view">
		<field name="name">purchase.order.inherit.form.view</field>
		<field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='name']" position="after">
				<group>
					<field name='section_sum' invisible="1"/>
				</group>
			</xpath>

		</field>
	</record>
</odoo>