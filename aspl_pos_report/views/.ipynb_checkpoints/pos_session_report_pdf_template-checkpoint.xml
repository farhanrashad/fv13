<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="pos_session_report_pdf_template">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                <div class="page">
                    <div align="center" style="border:1px solid black;margin:0 auto;padding:0 auto;font-size:25px">
                        <strong>Session Report</strong>
                    </div>
                    <t t-foreach="docs" t-as="o">
                        <table style="width:100%;margin-top:15px;">
                            <tr>
                                <td class="text-left">
                                    Report Date
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.get_current_date()"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    Report Time
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.get_current_time()"/>
                                </td>
                            </tr>
                        </table>
                        <table style="width:100%;margin-top:15px;">
                            <tr>
                                <td class="text-left">
                                    Register #
                                </td>
                                <td class="text-right">
                                    1
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    Batch #
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    Batch Status
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.state"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    Started at
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.get_session_date(o.start_at)"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    Ended at
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.get_session_date(o.stop_at)"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    Cashier
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.user_id.name"/>
                                </td>
                            </tr>
                        </table>
                        <table>
                            <tr>
                                    <th width="60%">Order#</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            <t t-foreach="o.order_ids" t-as="h">
                                <tr>
                                <td width="60%"><span t-esc="h.name"/></td>
                                    <td class="text-right"><span t-esc="h.amount_total" t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></td>
                                </tr>
                                <!--<tr>
                                    <td></td>
                                </tr>
                                <t t-foreach="h.lines" t-as="l">
                                    <tr style="border-top:1px solid #ebebeb;border-bottom:1px solid #ebebeb;">
                                    <td><span t-esc="l.product_id.name"/></td>
                                    <td><span t-esc="l.qty"/></td>
                                    <td><span t-esc="l.price_unit"/></td>
                                    </tr>
                                </t>
-->
                            </t>
                        </table>
                        <table style="width:100%;margin-top:15px;">
                            <tr>
                                <td class="text-left">
                                    Closing Total
                                </td>
                                <td class="text-right">
                                    <span t-field="o.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(o.get_total_sales())"/>
                                </td>
                            </tr>
                        </table>
                        
                        
                    </t>
                </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
