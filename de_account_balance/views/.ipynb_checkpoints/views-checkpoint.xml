<odoo>
  <data>
      <record id="view_account_summary_account_form_view" model="ir.ui.view">
        <field name="name">view.account.summary.account.form</field>
        <field name="model">account.summary.master</field>
        <field name="arch" type="xml">
            <form string="Account Summary">
                <header>
                    <button string="Recompute" name="action_recompute" type="object" class="oe_highlight"/>
                </header>
                <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                <notebook>
                        <page string="Summary Accounts">
                            <field name="account_summary_line_ids" widget="one2many_list">
                                <tree string="Account Summary lines" editable="bottom">
                                    <field name="account_id"/>
                                    <field name="balance"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="Accounts Total">
                                <field name="accounts_total" />
                            </group>
                        </page>
                </notebook>
            </form>
        </field>
    </record>
      
      <record id="view_account_summary_account_tree" model="ir.ui.view">
        <field name="name">view.account.summary.account.tree</field>
        <field name="model">account.summary.master</field>
        <field name="arch" type="xml">
            <tree string="Account Summary">
                <field name="name"/>
                <field name="accounts_total" />
            </tree>
        </field>
    </record>
      
