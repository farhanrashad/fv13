<odoo>
    <record model="ir.ui.view" id="view_account_payment_form_inherit">
        <field name="name">view.account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]/group[not(@name)][1]/field[@name='amount']" position="attributes">
                 <!--<attribute name="attrs">{}</attribute>
    <attribute name="readonly">1</attribute>-->
                <!--<attribute name="attrs">{"invisible": [["is_wht_liable","!=",True]]}</attribute>-->
                <!--<attribute name="attrs">{"required": [["is_wht_liable","!=",True]]}</attribute>-->
            </xpath>
            
            <xpath expr="//field[@name='partner_id']" position="after">
                <!--<field name="gross_amount" attrs="{'required':[('is_wht_liable', '=', True)],'invisible':[('is_wht_liable', '!=', True)]}" />-->
                
            </xpath>
            <xpath expr="//field[@name='payment_method_id']" position="after">
                <field name="is_wht_liable"/>
                <field name="wht_type_id"  attrs="{'required':[('is_wht_liable', '=', True)],'invisible':[('is_wht_liable', '!=', True)]}" />
                <!--<field name="base_amount" attrs="{'required':[('is_wht_liable', '=', True)],'invisible':[('is_wht_liable', '!=', True)]}" />-->
                <!--<field name="wht_amount" attrs="{'required':[('is_wht_liable', '=', True)],'invisible':[('is_wht_liable', '!=', True)]}" />-->
                <field name="wht_amount"  />
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_account_payment_invoice_form_inherit">
        <field name="name">view.account.payment.invoice.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="before">
                <!--<field name="gross_amount" attrs="{'required':[('is_wht_liable', '=', True)],'invisible':[('is_wht_liable', '!=', True)]}" />-->
                <field name="is_wht_liable"/>
            </xpath>
            <!--
            <xpath expr="//field[@name='payment_method_id']" position="after">
                <field name="wht_type_id"  attrs="{'required':[('is_wht_liable', '=', True)],'invisible':[('is_wht_liable', '!=', True)]}" />
                <field name="base_amount" attrs="{'required':[('is_wht_liable', '=', True)],'invisible':[('is_wht_liable', '!=', True)]}" />
                <field name="wht_amount"  />
            </xpath>
-->
        </field>
    </record>
    
</odoo>
