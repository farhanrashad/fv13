<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_commission_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.commission.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[4]" position="inside">
                <h2>Sales Commission</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="commission_default_percentage"/>
                            <div class="text-muted">
                                Default commission percentage use for customer master data
                            </div>
                            <div>
                                <field name="commission_default_percentage"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                        <span class="o_form_label">Commission Type</span>
                            <div class="text-muted">
                                Product used for Commission
                            </div>
                            <div class="text-muted">
                                <field name="commission_default_product_id"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Calculation</span>
                            <div class="text-muted">
                                Set value to compute commission on sale order
                            </div>
                            <div>
                                <field name="calculation_type"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>


