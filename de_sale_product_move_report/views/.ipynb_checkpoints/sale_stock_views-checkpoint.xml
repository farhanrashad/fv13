<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="wizard_sale_stock_move_view" model="ir.ui.view">
        <field name="name">wizard.sale.stock.move.view</field>
        <field name="model">wizard.sale.stock.move</field>
        <field name="arch" type="xml">
            <form string="Sale Stock">
                <group col="4">
                    <field name="date"/>
                    <field name="sale_id"/>
                    <field name="location_id" />
                    <field name="partner_id"/>
                    <field name="group_by_report" widget="radio" />
                    <field name="filter_by_report" widget="radio" />
                </group>

                <footer>
                    <button name="print_report" type="object" string="Print" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_product_move_wizard" model="ir.actions.act_window">
        <field name="name">Sale Product Move Report</field>
        <field name="res_model">wizard.sale.stock.move</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sale_stock_report" name="Sale Product Move Report" parent="stock.menu_warehouse_report" action="action_sale_product_move_wizard" sequence="150" />
</odoo>