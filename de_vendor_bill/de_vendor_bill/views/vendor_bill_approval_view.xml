<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Bill Approval Tree View -->
        <record id="bill_approval_tree_view" model="ir.ui.view">
            <field name="name">bill.approval.tree.view</field>
            <field name="model">bill.approval</field>
            <field name="arch" type="xml">
                <tree string="Bill Approvers" editable="bottom">
                    <field name="submitted_id"/>
                    <field name="approver_id" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <!-- Bill Approver Action View -->
        <record id="bill_approve_action" model="ir.actions.act_window">
            <field name="name">Bill Approve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bill.approval</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click Here to Create A New Payment State
                </p>
            </field>
        </record>

        <menuitem
                id="bill_approval_menu"
                name="Bill Approval"
                parent="account.menu_finance_configuration"
                action="bill_approve_action"
                sequence="6"
        />

    </data>
</odoo>