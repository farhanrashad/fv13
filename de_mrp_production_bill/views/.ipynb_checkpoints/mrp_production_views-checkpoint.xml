<odoo>
  <data>
      
  
       <record id="production_order_form_view_inherit" model="ir.ui.view">
			<field name="name">mrp.production.form.view</field>
			<field name="model">mrp.production</field>
			<field name="inherit_id" ref="mrp.mrp_production_form_view"/>
			<field name="arch" type="xml">
                
                <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_vendor_bill" type="object" class="oe_stat_button" state='done' icon="fa-pencil-square-o"  attrs="{'invisible': [('bill_count', '=', 0)]}">
                            <field name="bill_count" widget="statinfo" string="Expense Bills"/>
                        </button>
                </xpath>  
                    
				<xpath expr="//notebook" position="inside">
                    
					 <page string="Production Cost">
                         <form>
                             <group>
                               <group>
                                  <field name="cost" /> 
                                  <field name="journal_id"/>
                                  <field name="account_id" />
                               </group>
                               <group>
                                  <field name="partner_id"/> 
                               </group>  
                             </group>    
                         </form>
                       
                        </page>
				</xpath>
			</field>
		</record>
       
  </data>
</odoo>