<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_production_cost_wizard_form" model="ir.ui.view">
            <field name="name">production.cost.wizard.form</field>
            <field name="model">production.cost.wizard</field>
            <field name="arch" type="xml">
                <form string="Component Consumption Report">
                    <group>
                      <group>
                          <field name="partner_id" />
                          <field name="journal_id" />
                      </group>
                      <group>
                          <field name="cost" />
                          <field name="account_id" />
                          <field name="production_ids" widget="many2many_tags" invisible="0"/>
                          
                      </group>
                        
                    </group>
                   
                    <footer>
                        <button string='Create Bill' name="action_create_bill" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_production_cost_wizard_action" model="ir.actions.act_window">
            <field name="name">Production Cost Wizard</field>
            <field name="res_model">production.cost.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_production_cost_wizard_form"/>
        </record> 
    

</odoo>
