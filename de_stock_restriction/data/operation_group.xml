<odoo>
  <data>
    <record id="stock_picking_operation_button" model="ir.module.category">
        <field name="name">Stock Restriction</field>
        <field name="description">Restrict Operation for specific user</field>
         <field name="sequence">48</field>
    </record>

    <record id="group_disable_stock_operation" model="res.groups">
        <field name="name">Restrict Stock Operation</field>
        <field name="category_id" ref="stock_picking_operation_button"/>
