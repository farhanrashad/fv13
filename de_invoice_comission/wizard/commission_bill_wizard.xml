<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_sale_commission_wizard_form" model="ir.ui.view">
            <field name="name">sale.commission.wizard.form</field>
            <field name="model">sale.commission.wizard</field>
            <field name="arch" type="xml">
                <form string="Sale Commission">
                    <group>
                        <p>
                           Cumulative Agent Wise sale Commission.
                        </p>
                         
                          <field name="invoice_ids" widget="many2many_tags" invisible="1"/>
                          
                        
                    </group>
                   
                    <footer>
                        <button string='Create Bill' name="create_bill" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_production_cost_wizard_action" model="ir.actions.act_window">
            <field name="name">Production Cost Wizard</field>
            <field name="res_model">sale.commission.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_sale_commission_wizard_form"/>
        </record> 
    

</odoo>
