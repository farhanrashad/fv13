<odoo>
    <data>
        <record id="email_template_email_notification" model="mail.template">
            <field name="name">Product out stock Email</field>
            <field name="model_id" ref="de_mail_notification.model_product_template"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">Notification[Product Out of Stock]</field>
            <field name="body_html">
                <![CDATA[
                        <div>
                            <p>
                                <strong>Dear User,</strong><br/>
                                This Product is out of stock: <strong> ${ctx['name']}</strong><br/>
                                Quantity On Hand is:<strong>${ctx['qty']}</strong><br/>
                                Minimum Value in Ordering Rule:<strong>${ctx['min_val']}</strong>
                            </p>
                        </div>
                  ]]>
            </field>
        </record>
    </data>
</odoo>
