<odoo>
  <data>

      <record model="ir.ui.view" id="view_product_template_inherit">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <header>
                    <button name="run_scheduler" type="object" string="Run Scheduler" attrs="{'invisible': [('is_scheduler_running', '=', True)]}"/>
                </header>
                 <xpath expr="//group[@name='group_lots_and_weight']" position="after">
                   <group string="Mail User">
                      <field name="is_mail"/>
                      <field name="user_id" attrs="{'invisible': [('is_mail', '=', False)]}"/>
                      <field name="is_notified" invisible="1" attrs="{'invisible': [('is_mail', '=', False)]}"/>
                       <field name="is_scheduler_running" invisible="1" attrs="{'invisible': [('is_mail', '=', False)]}"/>
                   </group>
                </xpath>
            </field>
      </record>

  </data>
</odoo>
