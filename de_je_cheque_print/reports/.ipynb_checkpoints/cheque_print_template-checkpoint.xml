                                <span style="font-weight:bold" t-esc="date[0][1]"/>
                                </t>     
                              <t t-if="not o.cheque_formate_id.is_date_bold">  
                                <span t-esc="date[0][1]"/>
                                </t>     
                            </div>

                            <div t-attf-style="margin-left:#{o.cheque_formate_id.se_d_m_left}px;margin-top:#{o.cheque_formate_id.date_m_top}px;position: absolute;};">
                                <t t-if="o.cheque_formate_id.is_date_bold">  
                                <span style="font-weight:bold" t-esc="date[0][2]"/>
