                                <span t-esc="date[0][0]"/>
                              </t>  
                            </div>

                            <div t-attf-style="margin-left:#{o.cheque_formate_id.si_d_m_left}px;margin-top:#{o.cheque_formate_id.date_m_top}px;position: absolute;};">
