<odoo>
    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_po_id']" position="after">
                <label for="sec_uom_id" string="Sec. UOM"/>
                <div class="o_row">
                    <field name="sec_uom_id" groups="uom.group_uom"/>
                    <field name="sec_uom_factor"/>
                    <span>/</span>
                    <field name="uom_id" groups="uom.group_uom"/>
                </div>
            </xpath>
        </field>
    </record>
    
    <record id="product_template_only_form_tree_inherit" model="ir.ui.view">
        <field name="name">product.template.only.tree.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_id']" position="after">
                <field name="sec_qty"/>
                <field name="sec_uom_id"/>
            </xpath>
        </field>
    </record>
    
    <record id="product_product_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.product.tree.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_id']" position="after">
                <field name="sec_qty"/>
                <field name="sec_uom_id" groups="uom.group_uom"/>
            </xpath>
        </field>
    </record>
    
</odoo>