<odoo>
  <data>
      <record id="hr_employee_form_view" model="ir.ui.view">
			<field name="name">hr.employee.form.view.inherit</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='active_group']" position="after">
					<group string="Advance Salary">
                        <field name="sal_limit"/>
                        <field name="sal_req_limit"/>
                        
                     </group>
				</xpath>      
            </field>
		</record>
      
      
      <record model="ir.ui.view" id="advance_salary_tree_view">
            <field name="name">hr.employee.advance.salary.tree</field>
            <field name="model">hr.employee.advance.salary</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="request_date"/>
                    <field name="manager_id"/>
                    <field name="amount"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>
      
      <record model="ir.ui.view" id="disciplinary_case_form">
            <field name="name">hr.employee.advance.salary.form</field>
            <field name="model">hr.employee.advance.salary</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_send_request" states="draft" string="Send Request" type="object"/>
                        <button name="action_approve" states="request" string="Approve Request" type="object"/>
                        <button name="action_reject" states="request" string="Reject Request" type="object"/>
                        <button name="action_confirm" states="approval" string="Confirm" type="object"/>
                        <button name="action_paid" states="hrconfirm" string="Paid" type="object"/>

                        <button name="action_close_case" states="waiting,response" string="Close Case" type="object"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,request,approval.hrconfirm,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                                <field name="manager_id"/>
                                <field name="amount"/>                                
                                
                            </group>
                            <group>
                                <field name="request_date"/>
                                <field name="confirm_date"/>
                                <field name="conf_manager_id"/>
                            </group>
                        </group>
                        <div class="oe_title">
                            <h1>
                                <field name="note" placeholder="Reason..."/>
                            </h1>
                        </div>
                        
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
      
   <record id="advance_salary_menu_action" model="ir.actions.act_window">
        <field name="name">Advance Salary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.advance.salary</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a New Advance Salary 
            </p>
        </field>
    </record>
      
    <menuitem name="Advance Salary" id="advance_salary_main_menu" parent="hr.menu_hr_root" sequence="5"/>
    <menuitem name="Advance Salary" id="advance_salary_sub_menu" parent="advance_salary_main_menu" action="advance_salary_menu_action" sequence="1"/>
  </data>
</odoo>